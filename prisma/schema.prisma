generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id     Int     @id @default(autoincrement())
  name   String
  users  User[]
  courts Court[]
}

model Court {
  id         Int      @id @default(autoincrement())
  name       String
  url        String
  cameraName String
  camera     Int      @default(1)
  clientId   Int
  client     Client   @relation(fields: [clientId], references: [id])
  recordings Record[]
}

model Record {
  id      Int      @id @default(autoincrement())
  data    DateTime
  isDone  Boolean  @default(false)
  courtId Int
  court   Court    @relation(fields: [courtId], references: [id])
  url     String?
  awsKey  String?
}

model CronControl {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  isActive  Boolean  @default(false)
  interval  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
